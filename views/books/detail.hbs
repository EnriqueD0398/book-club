<div class="container my-3">
  <div class="row row-cols-1 row-cols-md-2">
    <div class="col">
      <img class="img-fluid w-100" src="https://placehold.co/400x500" alt="">
    </div>
    <div class="col">
      <h1>{{book.title}}</h1>
      <h3><a href="/books?author={{book.author._id}}">{{book.author.name}}</a></h3>
      <p>{{book.description}}</p>
      <p><strong>Páginas:</strong> {{book.pages}}</p>
      <p><strong>Año de publicación:</strong> {{book.publicationYear}}</p>
      <p><strong>Géneros:</strong>
        {{#each book.genres as |genre|}}
          <a href="/books?genres={{genre}}" class="badge text-bg-secondary me-2">{{genre}}</a>
        {{/each}}
      </p>
      <form action="/books/{{book._id}}/like" method="POST">
        <button class="btn {{#if liked}}btn-danger{{else}}btn-outline-danger{{/if}}">Like</button>
      </form>

      {{#if book.likes}}
      <p>{{book.likes.length}} usuarios les gusta este libro</p>
      <div class="d-flex">
        {{#each book.likes as |like|}}
          <a href="/users/{{like.user._id}}">
            <img class="rounded-circle border" src="{{like.user.avatar}}" title="{{like.user.email}}" width="20" />
          </a>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </div>
</div>